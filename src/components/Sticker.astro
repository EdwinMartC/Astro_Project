---
const {data} = Astro.props;
---

<style>
    .sticker-container{
        background: #212121;
        width: 300px;
        height: 300px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 5px;
        margin: 1rem 0;
    }
    
    .sticker{
        --size: 180px;
        image-rendering: pixelated;
        width: var(--size);
        height: var(--size);
    }

    .category{
        background-color: teal;
        padding: 8px;
        color: white;
        border-radius: 15px;
    }
</style>

<div class="sticker-container">
    <h1>{data.name}</h1>
    <img class="sticker" src={data.url} alt={data.name}>
    <span class="category">{data.category}</span>
</div>